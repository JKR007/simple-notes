<%= turbo_stream_from [ @note, "line_item_dates" ] %>
<main class="container mb-xxxxl">
  <%= link_to sanitize("&larr; Back to Notes"), notes_path %>
  <div class="header">
    <h1><%= @note.title %></h1>

    <%= link_to "New Date", new_note_line_item_date_path(@note), data: { turbo_frame: dom_id(LineItemDate.new) }, class: "btn btn--primary" %>
  </div>

  <%= turbo_frame_tag LineItemDate.new %>
  <%= turbo_frame_tag "line_item_dates" do %>
    <%= render @line_item_dates, note: @note %>
  <% end %>
</main>

<%= turbo_frame_tag dom_id(@note, :total) do %>
  <%= render "notes/total", note: @note %>
<% end %>
