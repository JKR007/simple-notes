<%= turbo_frame_tag line_item_date do %>
  <div class="line-item-date">
    <div class="line-item-date__header">
      <h2 class="line-item-date__title">
        <%= l(line_item_date.date, format: :long) %>
      </h2>

      <div class="line-item-date__actions">
        <%= button_to "Remove", [note, line_item_date], method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn--light" %>
        <%= link_to "Edit", [:edit, note, line_item_date], class: "btn btn--light" %>
      </div>
    </div>

    <div class="line-item-date__body">
      <div class="line-item line-item__header">
        <div class="line-item__name">Articles</div>
        <div class="line-item__quantity">Quantity</div>
        <div class="line-item__price">Price</div>
        <div class="line-item__actions"></div>
      </div>

      <%= render line_item_date.line_items, note: note, line_item_date: line_item_date %>

      <div class="line-item-date__footer">
        <%= link_to "Add Item", [:new, note, line_item_date, :line_item], data: { turbo_frame: "_top" }, class: "btn btn--primary" %>
      </div>
    </div>
  </div>
<% end %>
